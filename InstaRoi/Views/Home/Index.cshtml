        animation: edit-out 0.3s;
    }

    #container-floating:hover .edit {
        animation: edit-in 0.2s;
        animation-delay: 0.1s;
        animation-fill-mode: forwards;
    }

    @@keyframes edit-in {
        from {
            opacity: 0;
            transform: rotateZ(-70deg);
        }

        to {
            opacity: 1;
            transform: rotateZ(0deg);
        }
    }

    @@keyframes edit-out {
        from {
            opacity: 1;
            transform: rotateZ(0deg);
        }

        to {
            opacity: 0;
            transform: rotateZ(-70deg);
        }
    }

    @@keyframes plus-in {
        from {
            opacity: 1;
            transform: rotateZ(0deg);
        }

        to {
            opacity: 0;
            transform: rotateZ(180deg);
        }
    }

    @@keyframes plus-out {
        from {
            opacity: 0;
            transform: rotateZ(180deg);
        }

        to {
            opacity: 1;
            transform: rotateZ(0deg);
        }
    }

