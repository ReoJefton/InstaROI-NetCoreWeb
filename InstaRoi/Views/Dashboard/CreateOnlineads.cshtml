                </div>
                <div class="form-group col-md-6 col-sm-6 col-xs-6">
                    <p>Other</p>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1" style="padding-left:20px; padding-right:0px;">
                    <p>$</p>
                </div>
                <div class="form-group col-md-5 col-sm-5 col-xs-5">
                    @*<div class="col-md-4 col-sm-4 col-xs-4" style="padding-left:5px; padding-right:5px;">
                <p>Investment 2</p>
            </div>*@
                    <div class="col-md-12 col-sm-12 col-xs-12" style="padding-left:0px; padding-right:0px;">
                        <input asp-for="Investment4" class="form-control" value="0" placeholder="" onkeyup="sum();" autocomplete="off" />
                        <span asp-validation-for="Investment4" class="text-danger"></span>
                    </div>
                </div>
                <p><b>Revenue (Return)</b></p>
